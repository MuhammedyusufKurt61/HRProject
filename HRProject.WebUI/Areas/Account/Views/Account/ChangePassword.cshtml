@model PersonelChangePasswordViewModel
@{
    Layout = "~/Areas/Account/Views/Shared/_LoginLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section"></h2>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">
            <h3 class="mb-4 text-center" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight:500; font-size:x-large">ŞİFRE DEĞİŞTİRME</h3>
            <form method="post" asp-controller="Account" asp-area="Account" asp-action="ChangePassword" class="signin-form">
                <div class="form-group">
                    <input asp-for="Email" type="text" class="form-control" placeholder="Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="OldPassword" id="old-password-field" type="password" class="form-control password-field" placeholder="Eski Şifre" required>
                    <span toggle="#old-password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="NewPassword" id="new-password-field" type="password" class="form-control password-field" placeholder="Yeni Şifre" required>
                    <span toggle="#new-password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="NewPasswordCheck" id="new-password-field-check" type="password" class="form-control password-field" placeholder="Yeni Şifre Tekrar" required>
                    <span toggle="#new-password-field-check" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                    <span asp-validation-for="NewPasswordCheck" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-center">
                    @{
                        if (ViewBag.ErrorMessageNewPassword != null)
                        {
                            <p class="text-danger">@ViewBag.ErrorMessageNewPassword.ToString()</p>
                        }
                        if (ViewBag.ErrorMessage != null)
                        {
                            <p class="text-danger">@ViewBag.ErrorMessage.ToString()</p>
                        }
                        if (ViewBag.PasswordError != null)
                        {
                            <p class="text-danger text-center" style="font-size:small">@ViewBag.PasswordError.ToString()</p>
                        }
                    }
                </div>

                <div class="form-group justify-content-center d-flex">
                    <button class="button-82-pushable" role="button" asp-action="ChangePassword" asp-area="Account" style="letter-spacing:2px" asp-controller="Account" type="submit">
                        <span class="button-82-shadow"></span>
                        <span class="button-82-edge"></span>
                        <span class="button-82-front text">
                            ONAYLA
                        </span>
                    </button>
                </div>
                <div class="form-group justify-content-center d-flex">
                    <a class="button-82-pushable" role="button" asp-action="Login" asp-area="Account" asp-controller="Account">
                        <span class="button-82-shadow"></span>
                        <span class="button-82-edge"></span>
                        <span class="button-82-front text">
                            GERİ DÖN
                        </span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

