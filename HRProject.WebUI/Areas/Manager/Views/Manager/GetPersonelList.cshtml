@using HRProject.Models.Enums
@using HRProject.Models.ViewModels.PersonelVM;
@model PagedViewModel<PersonelSummaryViewModel>
@{
    ViewData["Title"] = "ListExpense";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutProfile.cshtml";
}

@{
    ViewData["Title"] = "Tables";
}

<div class="row">
    <div class="col">
        <div class="card">
            <!-- Card header -->
            <div class="card-header border-0 d-flex justify-content-between">
                <h3 class="mb-0">PERSONEL LİSTESİ</h3>
                <a asp-action="CreatePersonel" asp-area="Manager" asp-controller="manager" class="btn btn-primary">Yeni Personel Olustur</a>
            </div>

            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">PERSONEL ADI</th>
                            <th scope="col" class="sort" data-sort="budget">JOB</th>
                            <th scope="col" class="sort" data-sort="status">DEPARTMENT</th>
                            <th scope="col" class="sort" data-sort="status">EMAIL</th>
                            <th scope="col" class="sort" data-sort="status">PHONE NUMBER</th>
                            <th scope="col" class="sort" data-sort="completion">ADRESS</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model.Results)
                        {
                           
                            <tr >
                                <td class="status">
                                   @item.FullName
                                </td>
                                <td class="budget">
                                    @item.Job
                                </td>
                                <td>
                                    @item.Department
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.PhoneNumber
                                </td>
                                <td>
                                    @item.Address
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- Card footer -->
            <div class="card-footer py-4">
                <nav aria-label="...">
                    <ul class="pagination justify-content-end mb-0">
                        @if (Model.PageInfo.CurrentPage == 1)
                        {
                            <li class="page-item disabled">
                                <a class="page-link" asp-action="GetPersonelList" asp-area="Manager" asp-controller="Manager" asp-route-pageNo="@(Model.PageInfo.CurrentPage-1)">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="GetPersonelList" asp-area="Manager" asp-controller="Manager" asp-route-pageNo="@(Model.PageInfo.CurrentPage-1)">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.PageInfo.TotalPageCount; i++)
                        {
                            <li class="page-item active">
                                <a class="page-link" asp-action="GetPersonelList" asp-area="Manager" asp-controller="Manager" asp-route-pageNo="@i">@i</a>
                            </li>
                        }
                        @if (Model.PageInfo.CurrentPage == Model.PageInfo.TotalPageCount)
                        {
                            <li class="page-item disabled">
                                <a class="page-link" asp-action="GetPersonelList" asp-area="Manager" asp-controller="Manager" asp-route-pageNo="@(Model.PageInfo.CurrentPage+1)">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="GetPersonelList" asp-area="Manager" asp-controller="Manager" asp-route-pageNo="@(Model.PageInfo.CurrentPage+1)">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        }
                        @* https://www.youtube.com/watch?v=7uNKC3pPNyo*@
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>