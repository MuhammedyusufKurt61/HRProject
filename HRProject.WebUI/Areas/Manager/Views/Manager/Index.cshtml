@model PersonelSummaryViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Personel> SignInManager

@{
    Layout = "_LayoutProfile";
    ViewData["Title"] = "Profile";
}

<div class="row">

    <div class="col-xl-8 order-xl-2">
        <div class="card">
            <form asp-controller="Home" asp-action="Profile" method="POST">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <h2 class="">Kullanıcı Özet Bilgileri</h2>
                        </div>
                    </div>
                </div>
                <div class="card-body">                    
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-lg-6 mb-1">
                                <div class="form-group">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item" style="font-weight:bolder">Email Adresi</li>
                                        <li class="list-group-item">@Model.Email</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-6 mb-1">
                                <div class="form-group">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item" style="font-weight:bolder">Telefon Numarası</li>
                                        <li class="list-group-item">@Model.PhoneNumber</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"style="font-weight:bolder">Adres</li>
                                        <li class="list-group-item">@Model.Address</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer mb-3 mt-5">
                    <div class="row align-items-center">
                        <div class="col-12 text-center">
                            <a asp-action="Edit" asp-area="Manager" asp-controller="Manager" type="submit" class="btn btn-md btn-primary">
                                Güncelle
                            </a>
                            <a asp-controller="Manager" asp-area="Manager" asp-action="Details" type="submit" class="btn btn-md btn-success">
                                Detay Sayfasına Git
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-xl-4 order-xl-1">
        <div class="card card-profile">
            <img src="~/img/theme/img-1-1000x600.jpg" alt="Image placeholder" class="card-img-top">
            <div class="row justify-content-center">
                <div class="col-lg-3 order-lg-2">
                    <div class="card-profile-image">
                        <img src="~/personelImages/@Model.PhotoPath" alt="Images Not Found" class="rounded-circle" width="140px" height="140px">
                    </div>
                </div>
            </div>
            <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
            </div>
            <div class="card-body pt-0 mb-2">
                <div class="row">
                    <div class="col">
                        <div class="card-profile-stats d-flex justify-content-center">
                        </div>
                    </div>
                </div>
                <div class="px-5 ortala" style="font-weight:bolder">
                    <ul class="list-group list-group-flush mb-2" style="text-align:center">
                        <li class="list-group-item">@Model.FullName</li>
                        <li class="list-group-item">@Model.Department</li>
                        <li class="list-group-item">@Model.Job</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>   
    </div>
</div>
