@using Microsoft.AspNetCore.Identity
@inject SignInManager<Personel> SignInManager

<div class="dropdown-menu dropdown-menu-right">
    <div class="dropdown-header noti-title">
        <h6 class="text-overflow m-0">Hoşgeldiniz!</h6>
    </div>
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-area="personel" asp-controller="personel" asp-action="index" class="dropdown-item">
            <i class="ni ni-tv-2 text-primary"></i>
            <span>Anasayfa</span>
        </a>
        <a asp-area="personel" asp-controller="personel" asp-action="details" class="dropdown-item">
            <i class="ni ni-single-02 text-info"></i>
            <span>Detay Sayfasi</span>
        </a>
        <a asp-area="personel" asp-controller="personel" asp-action="edit" class="dropdown-item">
            <i class="ni ni-settings-gear-65 text-purple"></i>
            <span>Güncelle</span>
        </a>
       @* <a asp-area="personel" asp-controller="personel" asp-action="CreateAllowance" class="dropdown-item">
            <i style="color:gold" class="fa-sharp fa-solid fa-coins"></i>
            <span>Yeni Avans</span>
        </a>*@
        <div class="dropdown-divider"></div>
        <form class="form-inline" asp-area="Account" asp-controller="Account" asp-action="Logout">
            <button type="submit" class="dropdown-item logout">
                <i class="ni ni-user-run"></i>
                <span class="logout">Hesaptan Çık</span>
            </button>
        </form>
    }
    else
    {
        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">
            <i class="ni ni-single-02"></i>
            <span>Giriş</span>
        </a>
    }
</div>